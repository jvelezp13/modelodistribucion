# Django Settings
DJANGO_SECRET_KEY=tu-secret-key-aqui-genera-una-larga-y-segura
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=*

# PostgreSQL Database - Easypanel
POSTGRES_DB=nexo
POSTGRES_USER=postgres
POSTGRES_PASSWORD=TU-PASSWORD-AQUI-NO-COMPARTIR
POSTGRES_HOST=nexo_dbvector
POSTGRES_PORT=5432

# URL de conexión completa (alternativa)
# DATABASE_URL=postgres://postgres:PASSWORD@nexo_dbvector:5432/nexo?sslmode=disable

# Para desarrollo local, cambia POSTGRES_HOST a:
# POSTGRES_HOST=localhost

# Next.js Frontend (NEW)
NEXT_PUBLIC_API_URL=http://localhost:8001
# Para producción, cambiar a la URL de tu API:
# NEXT_PUBLIC_API_URL=https://api.your-domain.com

